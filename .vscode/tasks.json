{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "${workspaceFolder}/main.c",
                "${workspaceFolder}/task_manager.c",
                "${workspaceFolder}/task_ui.c",
                "${workspaceFolder}/date_utils.c",
                "-o",
                "${workspaceFolder}/task_manager"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}